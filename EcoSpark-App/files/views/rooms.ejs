<!DOCTYPE html >
<html>
	<head>
        <meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <link rel="stylesheet" type="text/css" href="/stylesheets/addRoom.css">  
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
		<link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
		<link rel="stylesheet" href="/stylesheets/mdb.min.css">
		<title> Eco Spark - Rooms </title>
    </head>

    <body>

        <%- include ('partials/header') -%>
    
        <% if (!home) { %>
            <h4 class="card-title text-center font-weight-bold">You need to create or assign yourself to a home</h4>
            <br>
            <div class="shadow-none card green lighten-4">
                <div class="view overlay text-center">
                    <span class="fa-stack fa-6x ">
                        <i class="fa fa-circle fa-stack-2x icon-background"></i>
                        <a class="fas fa-home fa-stack-1x icon" style="color:white" href="/home/rooms/add-home"></a>
                    </span>
                </div>
                <div class="card-body">
                    <h4 class="card-title text-center">Set up your home</h4>
                </div>
            </div>
        
        <% } %>

        <% if (home) { %>
        <h4 class="card-title text-center font-weight-bold"> <%= homeName %></h4>
        <h4 class="card-title text-center font-weight-bold">Choose a Room</h4>
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
                <% rooms.forEach(function(room) {%>
                    <!-- creates a circle button for kitchen -->
                    <!-- checks room type -->
                    <% if (room.roomType == "Kitchen") { %>
                        <!-- create card and set background to the same colour as the page -->
                        <div class="shadow-none card green lighten-4">
                            <div class="view overlay text-center">
                                <!-- size of the circle -->
                                <span class="fa-stack fa-6x ">
                                    <!-- create blue circle -->
                                    <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                    <!-- creates the image for the circle -->
                                    <!-- also sets the LINK of the button (where the button redirects to) -->
                                    <a class="fas fa-utensils fa-stack-1x icon" style="color:white" href="/home/rooms/<%=room.roomID %>"></a>
                                </span>
                            </div>
                            <div class="card-body">
                                <h4 class="card-title text-center"><%= room.roomDisplayName %></h4>
                            </div>
                        </div>
                    <% } %>
                    <% if (room.roomType == "Bedroom") { %>
                        <div class="shadow-none card green lighten-4">
                            <div class="view overlay text-center">
                                <span class="fa-stack fa-6x ">
                                    <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                    <a class="fas fa-bed fa-stack-1x icon" style="color:white" href="/home/rooms/<%=room.roomID %>"></a>
                                </span>                                                             
                            </div>
                            <div class="card-body">
                                <h4 class="card-title text-center"><%= room.roomDisplayName %></h4>
                            </div>
                        </div>
                    <% } %>
                    <% if (room.roomType == "LivingRoom") { %>
                        <div class="shadow-none card green lighten-4">
                            <div class="view overlay text-center">
                                <span class="fa-stack fa-6x ">
                                    <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                    <a class="fas fa-couch fa-stack-1x icon" style="color:white" href="/home/rooms/<%=room.roomID%>"></a>
                                </span>
                            </div>
                            <div class="card-body">
                                <h4 class="card-title text-center"><%= room.roomDisplayName %></h4>
                            </div>
                        </div>
                    <% } %>
                    <% if (room.roomType == "Bathroom") { %>
                        <div class="shadow-none card green lighten-4">
                            <div class="view overlay text-center">
                                <span class="fa-stack fa-6x ">
                                    <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                    <a class="fas fa-bath fa-stack-1x icon" style="color:white" href="/home/rooms/<%=room.roomID%>"></a>
                                </span>
                            </div>
                            <div class="card-body">
                                <h4 class="card-title text-center"><%= room.roomDisplayName %></h4>
                            </div>
                        </div>
                    <% } %>
                    <% if (room.roomType == "Hallway") { %>
                        <div class="shadow-none card green lighten-4">
                            <div class="view overlay text-center">
                                <span class="fa-stack fa-6x ">
                                    <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                    <a class="fas fa-door-open fa-stack-1x icon" style="color:white" href="/home/rooms/<%=room.roomID%>"></a>
                                </span>
                            </div>
                            <div class="card-body">
                                <h4 class="card-title text-center"><%= room.roomDisplayName %></h4>
                            </div>
                        </div>
                    <% } %>
                    <% if (room.roomType == "DiningRoom") { %>
                        <div class="shadow-none card green lighten-4">
                            <div class="view overlay text-center">
                                <span class="fa-stack fa-6x ">
                                    <i class="fa fa-circle fa-stack-2x icon-background"></i>
                                    <a class="fas fa-chair fa-stack-1x icon" style="color:white" href="/home/rooms/<%=room.roomID%>"></a>
                                </span>
                            </div>
                            <div class="card-body">
                                <h4 class="card-title text-center"><%= room.roomDisplayName %></h4>
                            </div>
                        </div>
                    <% } %>
                <% }) %>
                <div class="shadow-none card green lighten-4">
                    <div class="view overlay text-center">
                        <span class="fa-stack fa-6x ">
                            <i class="fa fa-circle fa-stack-2x icon-background"></i>
                            <a class="fas fa-plus fa-stack-1x icon" style="color:white" href="/home/rooms/add-room"></a>
                        </span>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title text-center">Add Room</h4>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
      
        <script type="text/javascript" src="/javascripts/jquery.min.js"></script>
        <script type="text/javascript" src="/javascripts/popper.min.js"></script>
        <script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
        <script type="text/javascript" src="/javascripts/mdb.min.js"></script>
    </body>
</html>