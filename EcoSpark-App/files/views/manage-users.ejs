<!DOCTYPE html >
<html>
	<head>
        <meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <link rel="stylesheet" type="text/css" href="/stylesheets/homePage.css">  
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
		<link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
		<link rel="stylesheet" href="/stylesheets/mdb.min.css">
		<title> Eco Spark - Manage Users </title>
    </head>

    <body>
        <%- include ('partials/header') -%>



        <h4 class="card-title text-center font-weight-bold">Choose a User</h4>
        <div class="container">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
            <% users.forEach(function(user) {%>
              <div class="shadow-none card green lighten-4">
                <div class="view overlay text-center">
                  <span class="fa-stack fa-6x ">
                    <i class="fa fa-circle fa-stack-2x icon-background"></i>
                    <a class="fas fa-users-cog fa-stack-1x icon" style="color:white" href="/home/manage-users/<%=user.username%>"></a>
                  </span>
                </div>
                <div class="card-body">
                  <h4 class="card-title text-center"><% user.displayName %></h4>
                </div>
              </div>
             <% } %>
          </div>
        </div>


        <div class="container align-self-center mr-1">
          <div class="row">
            <div class="col-sm-8">
              <div class="card p-4 rounded">
                <h5>USERNAME HERE</h5>
              </div>
            </div>
          </div>
        </br>
          <div class="row">
            <div class="col-sm-8">
              <div class="card p-4 rounded">
                <form>
                  <div class="form-group">
                    <h5>Display Name:</h5>
                    <input class="form-control disabled rounded">
                    <small class="form-text text-muted">Name displayed throughout the application.</small>
                      </br>
                      <h5>Username:</h5>
                      <input class="form-control disabled rounded">
                          <small class="form-text text-muted">Unique username chosen to be used when logging in.</small>
                    </input>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        
        <script type="text/javascript" src="/javascripts/jquery.min.js"></script>
        <script type="text/javascript" src="/javascripts/popper.min.js"></script>
        <script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
        <script type="text/javascript" src="/javascripts/mdb.min.js"></script>
    </body>
</html>