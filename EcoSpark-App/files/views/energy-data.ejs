						<div class="card-body">
							<h2 class="titles">
								<p class="h2 text-center">You have not created a home yet! </p>
							</h2>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<% } %>
	<% if (home) { %>

	<div class="container">
		<p class="white-text">
